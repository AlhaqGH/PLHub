    assert decimalState.display == "3.14"
    
    System.print("")
    System.print("âœ… Special functions passed!")

function testClear():
    System.print("")
    System.print("=== Testing Clear Function ===")
    System.print("")
    
    let state = new CalculatorState()
    handleNumber(state, "9")
    handleNumber(state, "9")
    handleNumber(state, "9")
