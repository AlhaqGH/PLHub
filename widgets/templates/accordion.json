{
  "key": "accordion",
  "name": "Accordion Widget",
  "description": "Collapsible sections that expand/collapse to show content.",
  "category": "navigation",
  "tags": ["accordion", "collapse", "expand", "sections"],
  "preview": [
    "Write \"▼ Section 1 (Expanded)\"",
    "Write \"  Content for section 1...\"",
    "Write \"► Section 2 (Collapsed)\"",
    "Write \"► Section 3 (Collapsed)\""
  ],
  "files": [
    {
      "path": "ui/widgets/{{widget_snake}}.poh",
      "description": "Accordion widget with collapsible sections",
      "content": [
        "Start Program",
        "",
        "# {{widget_title}} - Accordion Widget",
        "# Collapsible sections for organizing content",
        "",
        "Set sections to [\"Getting Started\", \"Advanced Features\", \"Troubleshooting\"]",
        "Set expanded_section to \"Getting Started\"",
        "",
        "Write \"Accordion Menu\"",
        "Write \"══════════════════════════════════\"",
        "Write \"\"",
        "",
        "# Section 1",
        "If expanded_section is equal to \"Getting Started\"",
        "    Write \"▼ Getting Started (Expanded)\"",
        "    Write \"  \"",
        "    Write \"  Welcome to the getting started guide!\"",
        "    Write \"  Follow these steps to begin...\"",
        "    Write \"  \"",
        "Otherwise",
        "    Write \"► Getting Started\"",
        "End If",
        "",
        "Write \"\"",
        "",
        "# Section 2",
        "If expanded_section is equal to \"Advanced Features\"",
        "    Write \"▼ Advanced Features (Expanded)\"",
        "    Write \"  \"",
        "    Write \"  Learn about advanced capabilities...\"",
        "    Write \"  \"",
        "Otherwise",
        "    Write \"► Advanced Features\"",
        "End If",
        "",
        "Write \"\"",
        "",
        "# Section 3",
        "If expanded_section is equal to \"Troubleshooting\"",
        "    Write \"▼ Troubleshooting (Expanded)\"",
        "    Write \"  \"",
        "    Write \"  Common issues and solutions...\"",
        "    Write \"  \"",
        "Otherwise",
        "    Write \"► Troubleshooting\"",
        "End If",
        "",
        "Write \"\"",
        "Write \"══════════════════════════════════\"",
        "",
        "End Program"
      ]
    }
  ]
}
