{
  "name": "Default Light",
  "description": "Baseline light theme optimized for readability and general-purpose applications.",
  "tokens": {
    "background": "#FFFFFF",
    "surface": "#F5F7FA",
    "foreground": "#1F2933",
    "foregroundSecondary": "#52606D",
    "border": "#D2D6DC",
    "primary": "#2563EB",
    "primaryForeground": "#FFFFFF",
    "secondary": "#10B981",
    "accent": "#F97316",
    "error": "#EF4444",
    "warning": "#F59E0B",
    "info": "#3B82F6",
    "success": "#10B981"
  },
  "typography": {
    "fontFamily": "Inter, Segoe UI, sans-serif",
    "fontSizeBase": 16,
    "headingScale": [2.25, 1.75, 1.5, 1.25, 1.0, 0.875],
    "lineHeight": 1.6
  },
  "elevation": {
    "level0": "none",
    "level1": "0px 1px 2px rgba(15, 23, 42, 0.08)",
    "level2": "0px 4px 12px rgba(15, 23, 42, 0.15)",
    "level3": "0px 12px 24px rgba(15, 23, 42, 0.18)"
  },
  "components": {
    "button": {
      "padding": "0.6rem 1.25rem",
      "radius": "0.5rem",
      "fontWeight": 600
    },
    "card": {
      "radius": "0.75rem",
      "padding": "1.5rem",
      "border": "1px solid #E5E7EB"
    },
    "input": {
      "padding": "0.65rem 1rem",
      "radius": "0.5rem",
      "border": "1px solid #CBD5F5"
    }
  }
}
